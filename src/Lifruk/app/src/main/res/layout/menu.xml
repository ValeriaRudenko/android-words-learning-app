<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizGuessWordActivity">

    <Button
        android:id="@+id/button_connection"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:backgroundTint="#75346E"
        android:text="Connection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_quiz" />

    <Button
        android:id="@+id/button_flashcard"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:backgroundTint="#FF1493"
        android:text="FLASHCARD"
        app:layout_constraintBottom_toTopOf="@+id/button_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />

    <Button
        android:id="@+id/button_quiz"
        android:layout_width="149dp"
        android:layout_height="64dp"
        android:backgroundTint="#FF1493"
        android:text="QUIZ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

</androidx.constraintlayout.widget.ConstraintLayout>